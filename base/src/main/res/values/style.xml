<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/secondary</item>
        <item name="colorError">@color/error</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorPrimaryInverse">@color/text_inverse</item>
        <item name="android:windowBackground">@color/primary_contrast</item>

        <item name="android:textColorHint">@color/text_secondary</item>
    </style>

    <style name="Button" />

    <style name="Button.Normal" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:minHeight">@dimen/btn_normal_min_height</item>
        <item name="android:background">@drawable/btn_normal</item>
        <item name="android:textSize">@dimen/text_size_heading_2</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Text" />

    <style name="Text.Heading1">
        <item name="android:textSize">@dimen/text_size_heading_1</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Text.Heading2">
        <item name="android:textSize">@dimen/text_size_heading_2</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Text.Regular">
        <item name="android:textSize">@dimen/text_size_regular</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Text.Description">
        <item name="android:textSize">@dimen/text_size_description</item>
        <item name="android:textColor">@color/text_unimportant</item>
    </style>

</resources>