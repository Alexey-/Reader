<?xml version="1.0" encoding="utf-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
       android:insetLeft="@dimen/btn_normal_inset_horizontal"
       android:insetTop="@dimen/btn_normal_inset_vertical"
       android:insetRight="@dimen/btn_normal_inset_horizontal"
       android:insetBottom="@dimen/btn_normal_inset_vertical">
    <ripple android:color="?android:attr/colorControlHighlight">
        <item>
            <shape android:shape="rectangle">
                <solid android:color="?android:attr/colorAccent"/>
                <padding android:left="@dimen/btn_normal_padding_horizontal"
                         android:top="@dimen/btn_normal_padding_vertical"
                         android:right="@dimen/btn_normal_padding_horizontal"
                         android:bottom="@dimen/btn_normal_padding_vertical"/>
            </shape>
        </item>
    </ripple>
</inset>